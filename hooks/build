#!/bin/bash

docker build --build-arg VCS_REF=${SOURCE_COMMIT} \
             --build-arg BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ") \
             -t $IMAGE_NAME .
docker tag $IMAGE_NAME $DOCKER_REPO:1.9.6
docker push $DOCKER_REPO:1.9.6

docker build --build-arg VERSION='2.3.2.0' \
             --build-arg VCS_REF=${SOURCE_COMMIT} \
             --build-arg BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ") \
             -t $IMAGE_NAME .		
docker tag $IMAGE_NAME $DOCKER_REPO:2.3.2.0
docker push $DOCKER_REPO:2.3.2.0 
   		
docker build --build-arg VERSION='1.9.6' \
             --build-arg VCS_REF=${SOURCE_COMMIT} \
             --build-arg BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ") \
             -t $IMAGE_NAME .
docker tag $IMAGE_NAME $DOCKER_REPO:latest
docker push $DOCKER_REPO:latest
